<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="behat.rest_api.context.initializer.class">DavidDel\RestApi\RestApiExtension\ContextInitializer</parameter>
    </parameters>

    <services>
        <service id="behat.rest_api.context.initializer" class="%behat.rest_api.context.initializer.class%">
            <argument>%behat.rest_api.base_url%</argument>
            <tag name="behat.context.initializer" />
        </service>
    </services>
</container>
